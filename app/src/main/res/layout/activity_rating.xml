<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moviereview.RatingActivity">

    <TextView
        android:id = "@+id/pad1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "@string/spacing"
        android:textSize="6sp"
        android:visibility="invisible"/>

    <TextView
        android:id = "@+id/title2"
        android:text = ""
        android:textSize = "18sp"
        android:layout_below="@+id/pad1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id = "@+id/pad2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "@string/spacing"
        android:textSize="6sp"
        android:layout_below="@id/title2"
        android:visibility="invisible"/>

    <RatingBar
        android:id = "@+id/Rating"
        android:layout_below="@id/pad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating = "0.0"/>

    <TextView
        android:id = "@+id/pad3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "@string/spacing"
        android:textSize="6sp"
        android:layout_below="@id/Rating"
        android:visibility="invisible"/>

    <EditText
        android:id = "@+id/shareview"
        android:text = ""
        android:hint="@string/shareview"
        android:layout_below="@id/pad3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id = "@+id/var1"
        android:text = ""
        android:layout_below="@id/shareview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id = "@+id/var2"
        android:text = ""
        android:layout_below="@id/shareview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id = "@+id/var3"
        android:text = ""
        android:layout_below="@id/shareview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id = "@+id/var4"
        android:text = ""
        android:layout_below="@id/shareview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id = "@+id/var5"
        android:text = ""
        android:layout_below="@id/shareview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</RelativeLayout>